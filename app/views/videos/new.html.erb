<% provide(:title, 'Add Video') %>
<%= render "shared/header" %>

<div class="row">
  <h1>Add Video</h1>
  <div class="col-md-6 col-md-offset-3">
    <% if @video.errors.any? %>
      <ul>
        <% @video.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for [@video] do |f| %>
      <%= f.label :title %><br></br>
      <%= f.text_field :title, size: 10 %>
      <br/>
      <%= f.label :youtube_url %><br></br>
      <%= f.text_field :youtube_url, size: 10 %>
      <br/>

      <%= f.submit 'Save' , class: "formButtons"%><br></br>
    <% end %>

    <%= link_to('Cancel', videos_path(@video)) %>
  </div>
</div>