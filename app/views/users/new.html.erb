
<%= render "shared/header" %>

<div class="row">
  <h1>Sign up</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %><br></br>
      <%= f.text_field :name %><br></br>

      <%= f.label :email %><br></br>
      <%= f.text_field :email %><br></br>

      <%= f.label :password %><br></br>
      <%= f.password_field :password %><br></br>

      <%= f.label :password_confirmation, "Confirmation" %><br></br>
      <%= f.password_field :password_confirmation %><br></br>

      <%= f.submit "Create my account",class: 'formButtons'; %>
    <% end %>
  </div>
</div>
